# Aurora OSI v3 - Environment Configuration
# Production deployment to Google Cloud Run + Vercel

# ===== ENVIRONMENT =====
ENVIRONMENT="production"
DEBUG="false"

# ===== DATABASE =====
# Google Cloud SQL PostgreSQL with SSL
DATABASE_URL="postgresql://aurora_user:password@CLOUD_SQL_IP:5432/aurora_osi_v3?sslmode=require"

# Development (local PostgreSQL)
# DATABASE_URL="postgresql://postgres:aurora_password@localhost:5432/aurora_osi_v3"

# ===== CACHE =====
# Google Cloud Memorystore Redis
REDIS_URL="redis://REDIS_IP:6379/0"

# Development (local Redis)
# REDIS_URL="redis://localhost:6379/0"

# ===== API =====
HOST="0.0.0.0"
PORT="8000"
WORKERS="4"
LOG_LEVEL="INFO"

# ===== FRONTEND =====
FRONTEND_URL="https://aurora-osi.vercel.app"

# ===== SATELLITE INTEGRATION =====
# Google Earth Engine (Cloud Run secret)
GEE_SERVICE_ACCOUNT_FILE="/run/secrets/gee_key.json"
GEE_PROJECT_ID="aurora-osi-gee"
GEE_REQUEST_TIMEOUT="300"
GEE_BATCH_SIZE="100"

# ===== MINERAL DETECTION =====
MINERAL_CONFIDENCE_THRESHOLD="0.65"
MINERAL_SPECTRAL_TOLERANCE="0.08"
MAX_DETECTION_RESULTS="100"

# ===== INVERSIONS =====
INVERSION_MAX_ITERATIONS="1000"
INVERSION_CONVERGENCE_TOLERANCE="1e-6"
REGULARIZATION_PARAMETER="0.01"

# ===== FEATURES =====
ENABLE_GEE_INTEGRATION="true"
ENABLE_QUANTUM_INVERSION="false"
ENABLE_SEISMIC_PROCESSING="true"
ENABLE_DIGITAL_TWIN="true"

# ===== SECURITY =====
SECRET_KEY="your-super-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES="30"
REFRESH_TOKEN_EXPIRE_DAYS="7"

# ===== CORS =====
CORS_ORIGINS="https://aurora-osi.vercel.app,https://aurora-osi-frontend.vercel.app,http://localhost:3000,http://localhost:5173"
CORS_CREDENTIALS="true"

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS="1000"
RATE_LIMIT_PERIOD="60"

# ===== TEMPORAL =====
TEMPORAL_WINDOW_DAYS="30"
HISTORICAL_DATA_RETENTION_DAYS="365"
CACHE_EXPIRY_HOURS="24"
ENABLE_SATELLITE_TASKING="true"
ENABLE_SEISMIC_PROCESSING="true"

# ===== LOGGING =====
LOG_LEVEL="INFO"
LOG_FORMAT="json"
